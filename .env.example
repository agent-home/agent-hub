# ===========================================
# AgentHub Environment Configuration
# ===========================================
# Copy this file to .env and fill in your values
# NEVER commit .env to version control

# -----------------
# Server Configuration
# -----------------
SERVER_HOST=0.0.0.0
SERVER_PORT=8080
ENVIRONMENT=development  # development | staging | production

# -----------------
# Database
# -----------------
DATABASE_URL=postgres://agenthub:password@localhost:5432/agenthub?sslmode=disable
DATABASE_MAX_CONNECTIONS=100
DATABASE_IDLE_CONNECTIONS=10

# -----------------
# Redis
# -----------------
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=
REDIS_DB=0

# -----------------
# Authentication
# -----------------
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRY=24h
REFRESH_TOKEN_EXPIRY=168h  # 7 days

# -----------------
# OAuth Providers (Optional)
# -----------------
GITHUB_CLIENT_ID=
GITHUB_CLIENT_SECRET=
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=

# -----------------
# Storage
# -----------------
STORAGE_TYPE=local  # local | s3 | cos
STORAGE_PATH=./data/agents

# S3 Configuration (if STORAGE_TYPE=s3)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_REGION=us-east-1
S3_BUCKET=agenthub-agents

# Tencent COS Configuration (if STORAGE_TYPE=cos)
COS_SECRET_ID=
COS_SECRET_KEY=
COS_REGION=ap-guangzhou
COS_BUCKET=agenthub-agents

# -----------------
# LLM Providers
# -----------------
OPENAI_API_KEY=
OPENAI_BASE_URL=https://api.openai.com/v1

ANTHROPIC_API_KEY=
ANTHROPIC_BASE_URL=https://api.anthropic.com

# Local LLM (Ollama)
OLLAMA_BASE_URL=http://localhost:11434

# -----------------
# Rate Limiting
# -----------------
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60  # seconds

# -----------------
# Logging
# -----------------
LOG_LEVEL=info  # debug | info | warn | error
LOG_FORMAT=json  # json | text

# -----------------
# Metrics & Monitoring
# -----------------
METRICS_ENABLED=true
METRICS_PORT=9090

# -----------------
# Email (Optional)
# -----------------
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
SMTP_FROM=noreply@agenthub.dev

# -----------------
# Web Frontend
# -----------------
NEXT_PUBLIC_API_URL=http://localhost:8080
NEXT_PUBLIC_WS_URL=ws://localhost:8080
